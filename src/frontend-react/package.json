{
  "name": "pibu-ai",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "WATCHPACK_POLLING=true next dev",
    "electron": "electron .",
    "electron:debug": "electron --enable-logging .",
    "wait-and-launch": "echo 'Waiting for server...' && npx wait-on -v -t 180000 http://127.0.0.1:3000 && echo 'Server ready, launching Electron...' && npm run electron:debug",
    "dev-electron": "concurrently -k -n WEB,EL -c \"cyan,magenta\" \"npm run dev\" \"npm run wait-and-launch\"",
    "bundle-python": "bash scripts/bundle-python-macos.sh",
    "copy-out": "bash scripts/copy-out-to-app.sh",
    "build": "NODE_ENV=production next build",
    "build-electron": "NODE_ENV=production next build && npm run bundle-python && electron-builder",
    "build-macos": "NODE_ENV=production npm run build && npm run bundle-python && npx electron-forge package && npm run copy-out && bash scripts/create-dmg.sh",
    "make-dmg": "NODE_ENV=production npm run build && npm run bundle-python && npx electron-forge package && npm run copy-out && bash scripts/create-dmg.sh",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "node ./scripts/setup-python-env.js",
    "python:venv": "node ./scripts/setup-python-env.js"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.0",
    "@mui/material": "^5.14.0",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "axios": "^1.7.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "electron-is-dev": "^3.0.1",
    "lucide-react": "^0.552.0",
    "next": "^15.0.3",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "wait-on": "^9.0.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-dmg": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "autoprefixer": "^10.4.19",
    "electron": "^39.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.1.0",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.7"
  },
  "overrides": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
