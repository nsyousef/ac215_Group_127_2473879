{
  "name": "skincare-app",
  "version": "1.0.0",
  "description": "Skincare diagnosis and tracking app with Electron desktop wrapper",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "WATCHPACK_POLLING=true next dev",
    "dev-electron": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "next build && next export",
    "build-electron": "npm run build && electron-builder",
    "start": "electron .",
    "lint": "next lint"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.1.0"
  },
  "build": {
    "appId": "com.skincare.app",
    "productName": "SkinCare App",
    "directories": {
      "buildResources": "public"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": ["nsis"]
    },
    "mac": {
      "target": ["dmg", "zip"]
    },
    "linux": {
      "target": ["AppImage"]
    }
  }
}
