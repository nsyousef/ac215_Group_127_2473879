FROM python:3.11-slim-bookworm

ENV UV_LINK_MODE=copy
ENV UV_PROJECT_ENVIRONMENT=/app/.venv
ENV PATH="/app/.venv/bin:$PATH"

RUN set -ex; \
    for i in $(seq 1 8); do mkdir -p "/usr/share/man/man${i}"; done && \
    apt-get update && \
    apt-get upgrade -y && \
    apt-get install -y --no-install-recommends build-essential && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* && \
    pip install --no-cache-dir --upgrade pip && \
    pip install uv && \
    useradd -ms /bin/bash app -d /home/app -u 1000 && \
    mkdir -p /app && \
    chown app:app /app

USER app
WORKDIR /app

# Copy LLM module contents (includes tests/ and pyproject.toml)
COPY --chown=app:app ac215_Group_127_2473879/src/llm/ ./

# Install CPU-only PyTorch first to prevent CUDA installation
RUN pip install --no-cache-dir --user --index-url https://download.pytorch.org/whl/cpu torch

# Install all dependencies including dev (this will skip cpu extra which would reinstall CUDA torch)
# We need to explicitly tell uv to install from the default extras (dev is listed there)
RUN uv pip install --no-cache-dir -e . && uv pip install --no-cache-dir pytest>=7.0.0 black>=24.0.0 flake8>=7.0.0 pytest-cov>=4.1.0

# Run tests by default
CMD ["/bin/bash", "-c", "pytest tests/ -v --tb=short"]
