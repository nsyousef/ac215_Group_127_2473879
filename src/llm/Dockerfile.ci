FROM python:3.11-slim-bookworm

ENV UV_LINK_MODE=copy
ENV UV_PROJECT_ENVIRONMENT=/app/.venv

RUN set -ex; \
    for i in $(seq 1 8); do mkdir -p "/usr/share/man/man${i}"; done && \
    apt-get update && \
    apt-get upgrade -y && \
    apt-get install -y --no-install-recommends build-essential && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* && \
    pip install --no-cache-dir --upgrade pip && \
    pip install uv && \
    useradd -ms /bin/bash app -d /home/app -u 1000 && \
    mkdir -p /app && \
    chown app:app /app

USER app
WORKDIR /app

# Copy LLM module contents (includes tests/ and pyproject.toml)
COPY --chown=app:app ac215_Group_127_2473879/src/llm/ ./

# Install CPU-only PyTorch first to avoid CUDA bloat in CI
RUN pip install --no-cache-dir --user torch --index-url https://download.pytorch.org/whl/cpu

# Install dependencies including dev/test dependencies
RUN uv sync --all-extras

# Run tests by default
CMD ["/bin/bash", "-c", "source /app/.venv/bin/activate && pytest tests/ -v --tb=short"]
